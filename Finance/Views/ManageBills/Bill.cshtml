@model PhpaAll.Bills.BillViewModel

@{
    ViewBag.Title = "View Bill";
}



<h2 style="margin-top:0">
    <span>Bill Number  <mark class="small">@Html.DisplayFor(m => m.BillNumber) dated @Html.DisplayFor(m => m.BillDate)</mark></span>

    <a href="@Url.Action(MVC.ManageBills.Edit(Model.Id))" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-edit"></span>
        Edit
    </a>
    <a href="@Url.Action(MVC.Bills.RecentBills())" class="btn btn-default btn-sm">
        Recent Bills
    </a>
</h2>
<div class="well well-sm">
    <div class="row">
        <div class="col-md-3">
            <div>
                <label for="billDate">Bill Date</label>
                <div class='input-group date' id='billDatePicker'>
                    @Html.DisplayFor(m => m.BillDate)
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div>
                <label for="divSubDate">Received on</label>
                <div class='input-group date' id='divSubDatePicker'>
                    @Html.DisplayFor(m => m.SubmittedOnDate)
                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div>
                <label for="dueDate">Payment Due Date</label>
                <div class='input-group date' id='dueDatePicker'>
                    @Html.DisplayFor(m => m.DueDate)
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div >
                <label for="billNumber">Bill No.</label>
                <div class='input-group date'>
                    @Html.DisplayFor(m => m.BillNumber)
                </div>
            </div>
        </div>
    </div>
    <div >
        <label for="particulars">Particulars</label>
        @Html.DisplayFor(m => m.Particulars)
    </div>
    <div class="row">
        <div class="col-md-3">
            <div >
                <label for="tbDivision">Division</label>
                <div class="input-group input-group-sm">
                    @Html.DisplayFor(m => m.SubmittedToDivisionName)
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div >
                <label for="tbContractor">Contractor</label>

                <div class="input-group input-group-sm">
                    @Html.DisplayFor(m => m.SubmittedToDivisionName)
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div >
                <label for="amount">Amount</label>
                <div class="input-group input-group-sm">
                    @Html.DisplayFor(m => m.Amount)
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div >
                <label>Paid Date</label>
                <div class="input-group input-group-sm">
                    @Html.DisplayFor(m => m.PaidDate)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div >
                <label>Approved Date</label>

                <div class="input-group input-group-sm">
                    @Html.DisplayFor(m => m.ApprovedDate)
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div >
                <label>Approved By</label>
                <div class="input-group input-group-sm">
                    @Html.DisplayFor(m => m.ApprovedBy)
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div >
                <label>Station Name</label>
                <div class="input-group input-group-sm">
                    @Html.DisplayFor(m => m.StationName)
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div >
                <label for="image">Image: TODO</label>
                @Html.DisplayFor(m => m.BillImage)
            </div>
        </div>
    </div>
    <div >
        <label for="remarks">Remarks</label>

        @Html.DisplayFor(m => m.Remarks)
    </div>
</div>
