@model PhpaAll.Bills.BillViewModel

@{
    ViewBag.Title = "View Bill";
}



<h2 style="margin-top:0">
    <span>Bill Number  <mark class="small">@Html.DisplayFor(m => m.BillNumber)</mark></span>

    <a href="@Url.Action(MVC.ManageBills.Edit(Model.Id))" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-edit"></span>
        Edit
    </a>
    <a href="@Url.Action(MVC.Bills.RecentBills())" class="btn btn-default btn-sm">       
        Recent Bills
    </a>
</h2>

<ul class="list-group">

    <li class="list-group-item">
        <label for="billNumber" style="padding-right:1mm">Bill No.</label>
        @Html.DisplayFor(m => m.BillNumber)
    </li>
    <li class="list-group-item">
        <label for="particulars" style="padding-right:1mm">Particulars</label>@Html.DisplayFor(m => m.Particulars)
    </li>
    <li class="list-group-item">
        <label style="padding-right:1mm">Bill Date </label>
        @Html.DisplayFor(m => m.BillDate)

    </li>
    <li class="list-group-item">
        <label style="padding-right:1mm">Received by Division </label>
        @Html.DisplayFor(m => m.SubmittedToDivisionName)

    </li>
    <li class="list-group-item">
        <label style="padding-right:1mm">on date</label>
        @Html.DisplayFor(m => m.SubmittedOnDate)

    </li>
    <li class="list-group-item">
        <label style="padding-right:1mm">Due Date</label>
        @Html.DisplayFor(m => m.DueDate)
    </li>
    <li class="list-group-item">
        <label style="padding-right:1mm">Contractor</label>
        @Html.DisplayFor(m => m.ContractorName)

    </li>

    <li class="list-group-item">
        <label style="padding-right:1mm">Amount</label>
        @Html.DisplayFor(m => m.Amount)
    </li>

    <li class="list-group-item">
        <label style="padding-right:1mm">Image</label>
        @Html.DisplayFor(m => m.BillImage)
    </li>
    <li class="list-group-item">
        <label style="padding-right:1mm">Remark</label>
        @Html.DisplayFor(m => m.Remarks)

    </li>

    <li class="list-group-item">
        <label style="padding-right:1mm">Paid On</label>
        @Html.DisplayFor(m => m.PaidDate)

    </li>

    <li class="list-group-item">
        <label style="padding-right:1mm">Approved Date</label>
        @Html.DisplayFor(m => m.ApprovedDate)

    </li>
    <li class="list-group-item">
        <label style="padding-right:1mm">Approved By</label>
        @Html.DisplayFor(m => m.ApprovedBy)

    </li>
    <li class="list-group-item">
        <label style="padding-right:1mm">Station</label>
        @Html.DisplayFor(m => m.StationName)

    </li>
</ul>

<h2 style="margin-top:0">
    Audit
</h2>

<ul class="list-group">
    @for (var i = 0; i < Model.BillHistory.Count; ++i)
    {
        <li class="list-group-item">

            @Html.DisplayFor(m => m.BillHistory[i].DateCreated)

            @Html.DisplayFor(m => m.BillHistory[i].BillCreatedBy)

        </li>
    }
</ul>